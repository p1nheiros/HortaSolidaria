generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  senha     String
  nivel     String   @default("usuario")
  createdAt DateTime @default(now())
  doacoes   Doacao[]
}

model CentroDoacao {
  id           String   @id @default(uuid())
  nome         String
  endereco     String
  itensAceitos String[]
  createdAt    DateTime @default(now())
  doacoes      Doacao[]
}

model Doacao {
  id         String       @id @default(uuid())
  idUsuario  String
  idCentro   String
  item       String
  valor      Float
  quantidade Int
  dataDoacao DateTime
  status     String       @default("pendente")
  createdAt  DateTime     @default(now())
  Centro     CentroDoacao @relation(fields: [idCentro], references: [id])
  Usuario    Usuario      @relation(fields: [idUsuario], references: [id])
}
