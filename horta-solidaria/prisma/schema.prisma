datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  senha     String
  nivel     String   @default("usuario") // Admin ou usuario
  createdAt DateTime @default(now())

  // Relacionamento com Doacao
  doacoes   Doacao[]
}

model CentroDoacao {
  id           String   @id @default(uuid())
  nome         String
  endereco     String
  itensAceitos String[]
  createdAt    DateTime @default(now())

  // Relacionamento com Doacao
  doacoes      Doacao[]
}

model Doacao {
  id        String   @id @default(uuid())
  idUsuario String
  idCentro  String
  item      String
  valor     Float
  quantidade Int
  dataDoacao DateTime
  status    String   @default("pendente") // pendente, concluido, cancelado

  createdAt DateTime @default(now())

  // Relacionamentos
  Usuario   Usuario   @relation(fields: [idUsuario], references: [id])
  Centro    CentroDoacao @relation(fields: [idCentro], references: [id])
}
